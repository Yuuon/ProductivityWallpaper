<UserControl x:Class="ProductivityWallpaper.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="20">
        <TextBlock Text="{DynamicResource Label_Language}" Foreground="White" FontSize="16" Margin="0,0,0,10"/>
        <ComboBox ItemsSource="{Binding Languages}" SelectedItem="{Binding SelectedLanguage}" Width="200" HorizontalAlignment="Left"/>
    </StackPanel>
</UserControl>